	        <!-- /option 3 container -->
	        
	        <!-- option 4 container -->
	        
	        <LinearLayout
	            android:layout_margin="16dip"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center"
	            android:baselineAligned="true">
	            
