	                android:gravity="right|center">
	                
	                <Spinner
	                    android:id="@+id/settings_activity_plc_routine"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:spinnerMode="dropdown"
	                    android:background="@color/settings_activity_plc_routine_background_color" />
	            		
	            </LinearLayout>
	            
	        </LinearLayout>
	        
