	            </LinearLayout>
	            
	        </LinearLayout>
	        
	        <!-- /option 7 container -->
	        
	        <!-- option 8 container -->
	        
	        <LinearLayout
	            android:layout_margin="16dip"
	            android:layout_width="fill_parent"
